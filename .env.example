# Base de données
DATABASE_URL="file:./dev.db"

# Authentification (NextAuth)
NEXTAUTH_URL="http://localhost:3001"
NEXTAUTH_SECRET="votre_secret_nextauth_ici"

# Google Calendar API
GOOGLE_CLIENT_ID="votre_id_client_google"
GOOGLE_CLIENT_SECRET="votre_secret_client_google"
GOOGLE_REDIRECT_URI="http://localhost:3001/api/calendar/sync/google/callback"

# Chiffrement des données sensibles
# Générer avec : node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY="une_cle_de_32_octets_en_hexadecimal"

# Firebase (Authentification et Admin)
NEXT_PUBLIC_FIREBASE_API_KEY="votre_api_key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="votre_projet.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="votre_id_projet"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="votre_projet.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="votre_sender_id"
NEXT_PUBLIC_FIREBASE_APP_ID="votre_app_id"

# Firebase Admin (uniquement pour le serveur)
FIREBASE_ADMIN_PROJECT_ID="votre_id_projet"
FIREBASE_ADMIN_CLIENT_EMAIL="votre_email_service_account"
FIREBASE_ADMIN_PRIVATE_KEY="votre_cle_privee_firebase_admin"

# Configuration SMTP (E-mails)
SMTP_HOST="smtp.exemple.com"
SMTP_PORT=587
SMTP_USER="votre_utilisateur_smtp"
SMTP_PASS="votre_mot_de_passe_smtp"
SMTP_FROM="noreply@votre_domaine.com"

# URL de l'application
NEXT_PUBLIC_APP_URL="http://localhost:3001"
